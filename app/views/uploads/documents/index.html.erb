        <%= link_to '新規提出', new_uploads_compulsory_insurance_path, class: 'btn btn-primary btn-block btn-custom' %>
      <% else %>
        <p>有効期限: <%= @compulsory_insurance.expiration_date %></p>
        <%= link_to '編集する', edit_uploads_compulsory_insurance_path(@compulsory_insurance), class: 'btn btn-secondary btn-block btn-custom' %>
