<% if @vehicle_inspection.nil? %>
  <p>提出されている車検証はありません。</p>
  <%= link_to '新規提出', new_uploads_vehicle_inspection_path, class: 'btn btn-primary' %>
<% else %>
  <p>有効期限: <%= @vehicle_inspection.expiration_date %></p>
  <p><%= link_to '編集する', edit_uploads_vehicle_inspection_path(@vehicle_inspection), class: 'btn btn-secondary' %></p>
<% end %>
<h2>自賠責保険</h2>
<% if @compulsory_insurance.nil? %>
  <p>提出されている自賠責保険はありません。</p>
  <%= link_to '新規提出', new_uploads_compulsory_insurance_path, class: 'btn btn-primary' %>
<% else %>
  <p>有効期限: <%= @compulsory_insurance.expiration_date %></p>
  <p><%= link_to '編集する', edit_uploads_compulsory_insurance_path(@compulsory_insurance), class: 'btn btn-secondary' %></p>
<% end %>
<h2>任意保険</h2>
<% if @optional_insurance.nil? %>
  <p>提出されている任意保険はありません。</p>
  <%= link_to '新規提出', new_uploads_optional_insurance_path, class: 'btn btn-primary' %>
<% else %>
  <p>有効期限: <%= @optional_insurance.expiration_date %></p>
  <p><%= link_to '編集する', edit_uploads_optional_insurance_path(@optional_insurance), class: 'btn btn-secondary' %></p>
<% end %>
<% if @driver_license.nil? && @vehicle_inspection.nil? && @compulsory_insurance.nil? && @optional_insurance.nil? %>
  <div style="margin-top: 20px;">
    <%= link_to '新規提出', new_uploads_driver_license_path, class: 'btn btn-primary' %>
  </div>
<% end %>
