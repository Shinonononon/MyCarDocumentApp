<%= form_with(model: @vehicle_inspection, url: @vehicle_inspection.persisted? ? uploads_vehicle_inspection_path(@vehicle_inspection) : uploads_vehicle_inspections_path, html: { class: 'form-horizontal' }) do |f| %>
  <% if @vehicle_inspection.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <div id="error_explanation">
        <h4><%= pluralize(@vehicle_inspection.errors.count, "つ") %> のエラーが発生しました:</h4>
        <ul>
          <% @vehicle_inspection.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :expiration_date, VehicleInspection.human_attribute_name(:expiration_date), class: 'col-form-label' %><br />
    <%= f.date_field :expiration_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :photo, VehicleInspection.human_attribute_name(:photo), class: 'col-form-label' %><br />
    <%= f.file_field :photo, class: 'form-control-file' %>
  </div>
  <div class="form-group">
    <%= f.submit '保存', class: 'btn btn-primary btn-block btn-custom' %>
  </div>
<% end %>
