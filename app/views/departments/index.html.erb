<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>部署リスト</h1>
      <div class="text-right">
        <%= link_to '新しい部署を作る', new_department_path, class: 'btn btn-primary mb-3' %>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>部署名</th>
          </tr>
        </thead>
        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <td><%= department.name %></td>
              <td>
                <div class="text-right">
                  <%= link_to '編集', edit_department_path(department), class: 'btn btn-warning btn-sm' %>
                  <%= link_to '削除', department, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
