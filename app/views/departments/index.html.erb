<h1>Departments</h1>
<%= link_to 'New Department', new_department_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td>
          <%= link_to 'Edit', edit_departments_path(department) %>
        </td>
        <td>
          <%= link_to 'Delete', department, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
