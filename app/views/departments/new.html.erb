<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>新規作成</h1>
      <%= form_for(@department, html: { class: 'form-horizontal' }) do |f| %>
        <% if @department.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <div id="error_explanation">
              <h4><%= pluralize(@department.errors.count, "つ") %> のエラーが発生しました:</h4>
              <ul>
                <% @department.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :name, Department.human_attribute_name(:name), class: 'col-form-label' %><br />
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <div class="text-right">
            <%= f.submit '部署を作成', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
      <%= link_to '戻る', departments_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
