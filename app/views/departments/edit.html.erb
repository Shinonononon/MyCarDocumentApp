<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>編集</h1>
      <%= form_for(@department, html: { class: 'form-horizontal' }) do |f| %>
        <div class="form-group">
          <%= f.label :name, Department.human_attribute_name(:name), class: 'col-form-label' %><br />
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <div class="text-right">
            <%= f.submit '部署を編集', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
      <%= link_to '戻る', departments_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
