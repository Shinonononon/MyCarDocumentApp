<h2><%= t('employees.new.title') %></h2>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for([:admin, @employee], html: { class: 'form-horizontal' }) do |f| %>
        <div class="form-group">
          <%= f.label :name, Employee.human_attribute_name(:name), class: 'col-form-label' %><br />
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :name_kana, Employee.human_attribute_name(:name_kana), class: 'col-form-label' %><br />
          <%= f.text_field :name_kana, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-row">
          <div class="form-group col-md-3">
            <%= f.label :department, Employee.human_attribute_name(:department), class: 'col-form-label' %><br />
            <%= f.collection_select :department_id, Department.all, :id, :name, { prompt: "選択" }, { class: 'form-control' } %>
          </div>
          <div class="form-group col-md-9">
            <%= f.label :employee_number, Employee.human_attribute_name(:employee_number), class: 'col-form-label' %><br />
            <%= f.text_field :employee_number, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, Employee.human_attribute_name(:email), class: 'col-form-label' %><br />
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, Employee.human_attribute_name(:password), class: 'col-form-label' %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">(<%= @minimum_password_length %>文字以上)</small>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, Employee.human_attribute_name(:password_confirmation), class: 'col-form-label' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "作成", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
