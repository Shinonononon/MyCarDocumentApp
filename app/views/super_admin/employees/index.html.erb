<h1>Employees</h1>
<%= link_to 'New Employee', new_super_admin_employee_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Employee Number</th>
      <th>Driver License Expiration</th>
      <th>Vehicle Inspection Expiration</th>
      <th>Compulsory Insurance Expiration</th>
      <th>Optional Insurance Expiration</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.employee_number %></td>
        <td><%= employee.driver_license&.expiration_date %></td>
        <td><%= employee.vehicle_inspection&.expiration_date %></td>
        <td><%= employee.compulsory_insurance&.expiration_date %></td>
        <td><%= employee.optional_insurance&.expiration_date %></td>
        <td><%= employee.roles.map(&:name) %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_super_admin_employee_path(employee) %></td>
        <td><%= button_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
