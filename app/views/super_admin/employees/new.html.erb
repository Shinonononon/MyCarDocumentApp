<!-- app/views/super_admin/employees/new.html.erb -->
<h2>アカウント作成</h2>
<%= form_for([:super_admin, @employee]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :employee_number %><br />
    <%= f.text_field :employee_number %>
  </div>
  <div class="field">
    <%= f.label :department %><br />
    <%= f.collection_select :department_id, Department.all, :id, :name, prompt: "Select Department" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :role %><br />
    <%= f.select :role_ids, options_for_select(Role.all.map { |r| [r.name, r.id] }, selected: @employee.role_ids.first), prompt: "Select Role" %>
  </div>
  <div class="actions">
    <%= f.submit "Create Employee" %>
  </div>
<% end %>
